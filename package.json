{
  "name": "biggystring",
  "version": "1.0.1",
  "description": "Wrapper for bn.js to directly operate on strings as big numbers",
  "main": "lib/index.js",
  "keywords": [
    "big",
    "number"
  ],
  "author": "Airbitz, Inc.",
  "url": "https://airbitz.co",
  "contributors": [
    "Paul Puey <paul@airbitz.co>"
  ],
  "license": "ISC",
  "dependencies": {
    "bn.js": "^4.11.7"
  },
  "files": [
    "lib/*",
    "package.json",
    "readme.md"
  ],
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-flow": "^6.23.0",
    "eslint-plugin-flowtype": "^2.34.1",
    "standard": "^10.0.2",
    "mocha": "^3.1.2",
    "flow-bin": "^0.49.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ]
  },
  "scripts": {
    "flow": "flow",
    "babel": "babel src/ -d lib/",
    "build": "npm run lint && npm run prepare && npm run flow",
    "cover": "nyc --reporter=lcov --reporter=text --reporter=html --extension .js npm test",
    "lint --fix": "standard '*.js' 'src/**/*.js' --fix",
    "lint": "standard '*.js' 'src/**/*.js'",
    "prepare": "npm run babel",
    "test": "npm run build && mocha"
  }
}
